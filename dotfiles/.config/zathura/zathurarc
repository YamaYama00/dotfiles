unmap [normal]     q
unmap [fullscreen] q
unmap [normal]     p
unmap [fullscreen] p

set recolor-keephue
set selection-clipboard clipboard
set show-scrollbars true
set search-hadjust false
set window-title-page true


map [normal]     j scroll down
map [fullscreen] j scroll down
map [normal]     k scroll up
map [fullscreen] k scroll up
map [normal]     l scroll right
map [fullscreen] l scroll right
map [normal]     h scroll left
map [fullscreen] h scroll left

map [normal]     <C-n> navigate next
map [fullscreen] <C-n> navigate next
map [normal]     <C-p> navigate previous
map [fullscreen] <C-p> navigate previous

map [normal]     <C-j> scroll half-down
map [fullscreen] <C-j> scroll half-down
map [normal]     <C-k> scroll half-up
map [fullscreen] <C-k> scroll half-up

map [normal]     <Space> scroll half-down
map [fullscreen] <Space> scroll half-down
map [normal]     <S-Space> scroll half-up
map [fullscreen] <S-Space> scroll half-up

map [normal]     r reload
map [fullscreen] r reload
map [normal]     R rotate
map [fullscreen] R rotate

map [normal]     9 zoom in
map [fullscreen] 9 zoom in
map [normal]     0 zoom out
map [fullscreen] 0 zoom out
map [normal]     <C-9> adjust_window width
map [fullscreen] <C-9> adjust_window width
map [normal]     <C-0> adjust_window best-fit
map [fullscreen] <C-0> adjust_window best-fit

map [normal]     <Tab> toggle_index
map [fullscreen] <Tab> toggle_index
map [normal]     d toggle_page_mode 2
map [fullscreen] d toggle_page_mode 2

map [normal]     <F11> toggle_fullscreen
map [fullscreen] <F11> toggle_fullscreen
map [normal]     <F5> reload
map [fullscreen] <F5> reload

map [normal]     <A-1> set "first-page-column 1"
map [fullscreen] <A-1> set "first-page-column 1"
map [normal]     <A-2> set "first-page-column 2"
map [fullscreen] <A-2> set "first-page-column 2"

map [normal]     c recolor
map [fullscreen] c recolor

map [fullscreen] : focus_inputbar
map [fullscreen] <Esc> toggle_fullscreen
