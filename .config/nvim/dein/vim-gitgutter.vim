" ==============================================================================
"                                  vim-gitgutter
" ==============================================================================
set signcolumn=yes
set updatetime=50
let g:gitgutter_sign_added = '++'
let g:gitgutter_sign_modified = '-+'
let g:gitgutter_sign_removed = '__'
let g:gitgutter_sign_modified_removed = '+_'
let g:gitgutter_async = 1
